<div class="container">
  <section aria-labelledby="new-post-heading" class="section">
    <h2 id="new-post-heading" class="section-title">Post a New Complaint or Suggestion</h2>
    <form action="/posts" method="POST" class="post-form card">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required aria-required="true" class="form-input">
      </div>
      
      <div class="form-group">
        <label for="body">Description:</label>
        <textarea id="body" name="body" rows="4" required aria-required="true" class="form-input"></textarea>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit Post</button>
    </form>
  </section>

  <section aria-labelledby="posts-heading" class="section">
    <h2 id="posts-heading" class="section-title">Recent Posts</h2>
    <ul class="posts-list" role="list">
      <% posts.forEach(post => { %>
        <li role="listitem">
          <div class="card post-preview">
            <article>
              <h3><a href="/posts/<%= post.id %>" class="post-link"><%= post.title %></a></h3>
              <p><%= post.content.substring(0, 100) %>...</p>  
              <span class="post-meta">Comments: <%= post.Comments ? post.Comments.length : 0 %></span>  
            </article>
          </div>
        </li>
      <% }) %>
    </ul>
  </section>
</div>
